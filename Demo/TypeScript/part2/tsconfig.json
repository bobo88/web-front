{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/hello/**/*"
    ],

    // compilerOptions编译器的选项
    "compilerOptions": {
        // target 用来指定TS被编译为ES的版本
        "target": "es2015",
        "module": "es2015",
        // "lib": []
        // 用来指定编译后文件的存放目录
        "outDir": "./dist",
        // 是否对js文件进行编译
        "allowJs": true,
        // 是否对js文件进行语法规范检查
        "checkJs": true,
        // 删除注释
        "removeComments": false,
        // 不生成编译的文件
        "noEmit": false,
        // 当有错误时，不生成编译的文件
        "noEmitOnError": true,
        // 不允许隐式的any类型
        "noImplicitAny": false,
        // 不允许不明确类型的this
        "noImplicitThis": false
        // "outFile": "./dist/app.js"
    }
}